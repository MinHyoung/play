<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="CA" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n"/>
    </layout>
  </appender>

  <appender name="MainFileAppender" class="org.apache.log4j.FileAppender">
    <param name="File" value="main.log"/>
    <param name="Threshold" value="WARN"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n"/>
    </layout>
  </appender>

  <appender name="AdminFileAppender" class="org.apache.log4j.FileAppender">
    <param name="File" value="admin.log"/>
    <param name="Threshold" value="DEBUG"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n"/>
    </layout>
  </appender>

  <logger name="main" additivity="false">
    <level value="WARN" />
    <appender-ref ref="MainFileAppender" />
  </logger>

  <logger name="admin" additivity="false">
    <level value="WARN" />
    <appender-ref ref="AdminFileAppender" />
  </logger>

  <root>
    <level value="TRACE"/>
    <appender-ref ref="CA"/>
  </root>

</log4j:configuration>
